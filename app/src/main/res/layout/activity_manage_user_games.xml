<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameLibraryActivities.ManageUserGamesActivity">


    <EditText
        android:id="@+id/edit_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="game name..."/>

    <EditText
        android:id="@+id/edit_game_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="game description..."/>

    <Button
        android:id="@+id/add_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD GAME"/>

    <Button
        android:id="@+id/view_all_games_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all games"/>

    <Button
        android:id="@+id/delete_all_games_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/black"
        android:text="DELETE ALL GAMES"/>

    <Button
        android:id="@+id/delete_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/black"
        android:text="Delete"/>

    <TextView
        android:id="@+id/game_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>



</LinearLayout>